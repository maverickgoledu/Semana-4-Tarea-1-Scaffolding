
@model GestorProyectos.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h2 class="text-center">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <!-- Campo oculto para la URL de retorno -->
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <!-- Mostrar errores de validación generales -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Campo de Email -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Campo de Contraseña -->
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Opción Recordarme -->
                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <!-- Información de usuarios para login -->
                    <div class="alert alert-info mb-3">
                        <h5 class="alert-heading">Credenciales de acceso</h5>
                        <hr>
                        <p class="mb-1"><strong>Administrador:</strong></p>
                        <p class="mb-1">Email: admin@example.com</p>
                        <p class="mb-1">Contraseña: Admin123*</p>
                        <hr>
                        <p class="mb-1"><strong>Usuario Estándar:</strong></p>
                        <p class="mb-1">Email: usuario@example.com</p>
                        <p class="mb-0">Contraseña: Usuario123*</p>
                    </div>

                    <!-- Botón de Iniciar Sesión -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Scripts de validación del lado del cliente -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}